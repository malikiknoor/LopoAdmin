<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="toolbarTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="toolbarBackButtonStyle">
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="toolbarAddButtonStyle">
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_add_white_24dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
